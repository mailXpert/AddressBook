{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Contact lists</h1>

    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for contactList in contactLists %}
            <tr>
                <td><a href="/contact_list/{{ contactList.id }}">{{ contactList.name }}</a>
                    {%- if contactList.default -%}
                        <span title="default"> * </span>
                    {%- endif -%}
                </td>
                <td>
                    <a href="/contact_list/delete/{{ contactList.id }}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="/contact_list/create" class="btn btn-primary">Create a new contact list</a>

{% endblock %}